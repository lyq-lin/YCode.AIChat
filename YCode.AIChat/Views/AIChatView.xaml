<UserControl x:Class="YCode.AIChat.AIChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:YCode.AIChat"
             d:DesignHeight="450"
             d:DesignWidth="300"
             mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <Style x:Key="SendButtonStyle"
                   TargetType="{x:Type Button}">
                <Setter Property="Background" Value="CadetBlue" />
                <Setter Property="BorderBrush" Value="Transparent" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Padding" Value="8" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="3"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}">

                                <ContentPresenter Margin="{TemplateBinding Padding}" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="DeepSkyBlue" />
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="SkyBlue" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="MessageItemStyle"
                   TargetType="{x:Type ContentPresenter}">
                <Setter Property="ContentTemplateSelector">
                    <Setter.Value>
                        <local:AIMessageDataTemplateSelector>
                            <local:AIMessageDataTemplateSelector.AI>
                                <DataTemplate DataType="{x:Type local:AIChatMessageViewModel}">
                                    <Grid HorizontalAlignment="Left">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <Border Width="15"
                                                Height="15"
                                                VerticalAlignment="Top"
                                                CornerRadius="5"
                                                Background="Pink" />

                                        <Border Grid.Column="1"
                                                Margin="8,0,0,0"
                                                CornerRadius="3"
                                                Background="SkyBlue">

                                            <local:AIRichTextBox Margin="8"
                                                                 IsReadOnly="True"
                                                                 Background="Transparent"
                                                                 Text="{Binding Message}"
                                                                 BorderThickness="0" />
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </local:AIMessageDataTemplateSelector.AI>
                            <local:AIMessageDataTemplateSelector.User>
                                <DataTemplate>
                                    <Grid HorizontalAlignment="Right">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <Border Margin="0,0,8,0"
                                                CornerRadius="3"
                                                Background="SkyBlue">
                                            <TextBox Margin="8"
                                                     IsReadOnly="True"
                                                     Background="Transparent"
                                                     BorderThickness="0"
                                                     Text="{Binding Message}"
                                                     TextWrapping="Wrap" />
                                        </Border>

                                        <Border Grid.Column="1"
                                                Width="15"
                                                Height="15"
                                                VerticalAlignment="Top"
                                                CornerRadius="5"
                                                Background="CadetBlue" />
                                    </Grid>
                                </DataTemplate>
                            </local:AIMessageDataTemplateSelector.User>
                        </local:AIMessageDataTemplateSelector>
                    </Setter.Value>
                </Setter>
                <Setter Property="Margin" Value="0,8,0,0" />
            </Style>

            <Style x:Key="MessageStyle"
                   TargetType="{x:Type ItemsControl}">
                <Setter Property="ItemContainerStyle" Value="{StaticResource MessageItemStyle}" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ItemsControl}">
                            <Border Background="{TemplateBinding Background}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    BorderBrush="{TemplateBinding BorderBrush}">
                                <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                                              SnapsToDevicePixels="True"
                                              VerticalScrollBarVisibility="Auto">
                                    <ItemsPresenter Margin="0,0,8,0" />
                                </ScrollViewer>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding Title}"
                   TextAlignment="Center" />

        <ItemsControl x:Name="messages"
                      Grid.Row="1"
                      Style="{StaticResource MessageStyle}"
                      ItemsSource="{Binding Messages}" />

        <Grid Grid.Row="2"
              Margin="0,8,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Border BorderBrush="Gray"
                    CornerRadius="5"
                    BorderThickness="1">
                <TextBox MinHeight="200"
                         Padding="8"
                         Text="{Binding Prompt}"
                         BorderThickness="0"
                         TextWrapping="Wrap"
                         MaxLines="999" />
            </Border>

            <StackPanel Grid.Row="1"
                        Margin="0,8,0,0"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                <Button Content="发送"
                        Command="{Binding SendCommand}"
                        Style="{StaticResource SendButtonStyle}" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
